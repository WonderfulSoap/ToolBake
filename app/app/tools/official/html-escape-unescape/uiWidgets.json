[
  [
    {
      "id": "raw-text",
      "type": "TextareaInput",
      "title": "Raw Text",
      "mode": "input",
      "props": {
        "placeholder": "Enter the original text...",
        "rows": 6,
        "defaultValue": "<div>Hello & goodbye</div>",
        "highlight": "highlight:html"
      }
    }
  ],
  [
    {
      "id": "escaped-text",
      "type": "TextareaInput",
      "title": "Escaped Text",
      "mode": "input",
      "props": {
        "placeholder": "Enter escaped HTML text...",
        "rows": 6,
        "highlight": "highlight:html"
      }
    }
  ],
  [
    {
      "id": "divider-options",
      "type": "DividerInput",
