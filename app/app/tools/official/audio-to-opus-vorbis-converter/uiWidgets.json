[
  [
    {
      "id": "sourceAudios",
      "type": "FilesUploadInput",
      "title": "Audio Files",
      "mode": "input",
      "props": {
        "description": "Upload multiple audio files to convert into Opus or Vorbis using ffmpeg.wasm."
      }
    }
  ],
  [
    {
      "id": "codecType",
      "type": "RadioGroupInput",
      "title": "Codec",
      "mode": "input",
      "props": {
        "orientation": "horizontal",
        "defaultValue": "opus",
        "options": [
          {
            "value": "opus",
            "label": "Opus",
            "description": "Low-latency, efficient"
          },
          {
            "value": "vorbis",
            "label": "Vorbis",
            "description": "OGG Vorbis"
          }
        ]
      }
    }
  ],
  [
    {
      "id": "opusBitrate",
      "type": "NumberInput",
      "title": "Opus Bitrate",
      "mode": "input",
      "props": {
        "prefixLabel": "kbps",
        "prefixLabelSize": "6em",
        "min": 24,
        "max": 320,
        "step": 8,
        "defaultValue": 96
      }
    },
    {
      "id": "opusVbrMode",
      "type": "SelectListInput",
      "title": "Opus VBR Mode",
      "mode": "input",
      "props": {
        "placeholder": "VBR mode",
        "defaultValue": "on",
        "options": [
          {
            "value": "on",
            "label": "VBR"
          },
          {
            "value": "off",
            "label": "CBR"
          },
          {
            "value": "constrained",
            "label": "Constrained VBR"
          }
        ]
      }
    },
    {
      "id": "opusApplication",
      "type": "SelectListInput",
      "title": "Opus Application",
      "mode": "input",
      "props": {
        "placeholder": "Application",
        "defaultValue": "audio",
        "options": [
          {
            "value": "audio",
            "label": "Audio"
          },
          {
            "value": "voip",
            "label": "VoIP"
          },
          {
            "value": "lowdelay",
            "label": "Low Delay"
          }
        ]
      }
    }
  ],
  [
    {
      "id": "vorbisQuality",
      "type": "NumberInput",
      "title": "Vorbis Quality",
      "mode": "input",
      "props": {
        "prefixLabel": "Q",
        "prefixLabelSize": "6em",
        "min": 0,
        "max": 10,
        "step": 1,
        "defaultValue": 5
      }
    }
  ],
  [
    {
      "id": "convertTrigger",
      "type": "ButtonInput",
      "title": "Convert",
      "mode": "input",
      "props": {
        "label": "Convert",
        "variant": "default",
        "size": "default",
        "width": "180px",
        "description": "Run conversion with selected codec"
      }
    }
  ],
  [
    {
      "id": "convertProgress",
      "type": "ProgressBarInput",
      "title": "Progress",
      "mode": "output",
      "props": {
        "label": "Conversion progress",
        "hint": "Shows the current ffmpeg stage",
        "defaultValue": 0,
        "defaultTotal": 100
      }
    }
  ],
  [
    {
      "id": "outputDivider",
      "type": "DividerInput",
      "title": "Divider",
      "mode": "output",
      "props": {
        "label": "Output",
        "variant": "dashed",
        "gap": 8,
        "hidden": false
      }
    }
  ],
  [
    {
      "id": "convertOutput",
      "type": "LabelInput",
      "title": "Converted Audio Files",
      "mode": "output",
      "props": {
        "content": "",
        "tone": "default",
        "autoHeight": true
      }
    }
  ],
  [
    {
      "id": "convertError",
      "type": "LabelInput",
      "title": "Status",
      "mode": "output",
      "props": {
        "content": "",
        "tone": "default",
        "autoHeight": true
      }
    }
  ],
  [
    {
      "id": "convertLog",
      "type": "LabelInput",
      "title": "FFmpeg Log",
      "mode": "output",
      "props": {
        "content": "",
        "tone": "default",
        "autoHeight": true
      }
    }
  ]
]
