[
  [
    {
      "id": "input-images",
      "type": "FilesUploadInput",
      "title": "Upload Images",
      "mode": "input",
      "props": {
        "description": "Upload one or more image files to adjust colors. First image will be used for live preview.",
        "mini": false
      }
    }
  ],
  [
    {
      "id": "preview-label",
      "type": "LabelInput",
      "title": "Live Preview",
      "mode": "output",
      "props": {
        "content": "<div class='text-sm text-muted-foreground leading-relaxed'>Upload images to see live preview with adjusted colors. Adjustments are applied to the first uploaded image for preview.</div>",
        "autoHeight": true
      }
    }
  ],
  [
    {
      "id": "output-command",
      "type": "LabelInput",
      "title": "ImageMagick Commands",
      "mode": "output",
      "props": {
        "content": "<div class='text-sm text-muted-foreground'>Commands will appear here after processing</div>",
        "autoHeight": true
      }
    }
  ],
  [
    {
      "id": "filter-preset",
      "type": "RadioGroupInput",
      "title": "Filter Preset",
      "mode": "input",
      "props": {
        "orientation": "horizontal",
        "defaultValue": "none",
        "options": [
          {
            "value": "none",
            "label": "None",
            "description": "No filter"
          },
          {
            "value": "grayscale",
            "label": "Grayscale",
            "description": "Black & white"
          },
          {
            "value": "sepia",
            "label": "Sepia",
            "description": "Vintage tone"
          },
          {
            "value": "negate",
            "label": "Negative",
            "description": "Invert colors"
          },
          {
            "value": "normalize",
            "label": "Normalize",
            "description": "Auto contrast"
          },
          {
            "value": "autolevel",
            "label": "Auto Level",
            "description": "Auto levels"
          },
          {
            "value": "autogamma",
            "label": "Auto Gamma",
            "description": "Auto gamma"
          },
          {
            "value": "charcoal",
            "label": "Charcoal",
            "description": "Sketch effect"
          },
          {
            "value": "oilpaint",
            "label": "Oil Paint",
            "description": "Painting effect"
          },
          {
            "value": "solarize",
            "label": "Solarize",
            "description": "Inverted highlights"
          },
          {
            "value": "wave",
            "label": "Wave",
            "description": "Wave distortion"
          },
          {
            "value": "addnoise",
            "label": "Add Noise",
            "description": "Film grain"
          }
        ]
      }
    }
