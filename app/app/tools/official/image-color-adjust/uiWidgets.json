  [
    {
      "id": "brightness",
      "type": "SliderInput",
      "title": "Brightness",
      "mode": "input",
      "props": {
        "defaultValue": 100,
        "min": 0,
        "max": 200,
        "step": 1,
        "valueSuffix": "%"
      }
    },
    {
      "id": "contrast",
      "type": "SliderInput",
      "title": "Contrast",
      "mode": "input",
      "props": {
        "defaultValue": 100,
        "min": 0,
        "max": 200,
        "step": 1,
        "valueSuffix": "%"
      }
    }
  ],
  [
    {
      "id": "saturation",
      "type": "SliderInput",
