[
  [
    {
      "id": "sourceAudios",
      "type": "FilesUploadInput",
      "title": "Audio Files",
      "mode": "input",
      "props": {
        "description": "Upload multiple audio files to convert into WMA using ffmpeg.wasm."
      }
    }
  ],
  [
    {
      "id": "wmaProfile",
      "type": "SelectListInput",
      "title": "WMA Profile",
      "mode": "input",
      "props": {
        "placeholder": "Select profile",
        "defaultValue": "standard",
        "options": [
          {
            "value": "standard",
            "label": "Standard (WMA v2)"
          }
        ]
      }
    }
  ],
  [
    {
      "id": "targetBitrate",
      "type": "NumberInput",
      "title": "Target Bitrate",
      "mode": "input",
      "props": {
        "prefixLabel": "kbps",
        "prefixLabelSize": "6em",
        "min": 64,
        "max": 320,
        "step": 16,
        "defaultValue": 192
      }
    }
  ],
  [
    {
      "id": "convertTrigger",
      "type": "ButtonInput",
      "title": "Convert",
      "mode": "input",
      "props": {
        "label": "Convert to WMA",
        "variant": "default",
        "size": "default",
        "width": "180px",
        "description": "Run conversion with WMA output"
      }
    }
  ],
  [
    {
      "id": "convertProgress",
      "type": "ProgressBarInput",
      "title": "Progress",
      "mode": "output",
      "props": {
        "label": "Conversion progress",
        "hint": "Shows the current ffmpeg stage",
        "defaultValue": 0,
        "defaultTotal": 100
      }
    }
  ],
  [
    {
      "id": "outputDivider",
      "type": "DividerInput",
      "title": "Divider",
      "mode": "output",
      "props": {
        "label": "Output",
        "variant": "dashed",
        "gap": 8,
        "hidden": false
      }
    }
  ],
  [
    {
      "id": "convertOutput",
      "type": "LabelInput",
      "title": "Converted WMA Files",
      "mode": "output",
      "props": {
        "content": "",
        "tone": "default",
        "autoHeight": true
      }
    }
  ],
  [
    {
      "id": "convertError",
      "type": "LabelInput",
      "title": "Status",
      "mode": "output",
      "props": {
        "content": "",
        "tone": "default",
        "autoHeight": true
      }
    }
  ],
  [
    {
      "id": "convertLog",
      "type": "LabelInput",
      "title": "FFmpeg Log",
      "mode": "output",
      "props": {
        "content": "",
        "tone": "default",
        "autoHeight": true
      }
    }
  ]
]
